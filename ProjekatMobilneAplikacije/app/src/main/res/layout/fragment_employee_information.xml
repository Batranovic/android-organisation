<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.employees.EmployeeInformationFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:background="@color/lavander"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_face" />
        </LinearLayout>

        <TextView
            android:id="@+id/employee_common_name"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginLeft="145dp"
            android:textSize="25dp"
            android:text="@string/employee_common_name" />


    </LinearLayout>

    <TextView
        android:id="@+id/em_email"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/employee_email" />

    <TextView
        android:id="@+id/em_phone_number"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/em_phone_number" />

    <TextView
        android:id="@+id/em_address"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/em_address" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:gravity="bottom|end"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/employee_services" />

            <Spinner
                android:id="@+id/services_spinner"
                android:layout_width="wrap_content"
                android:layout_weight="0.2"
                android:text="@string/employee_services"
                android:tooltipText="@string/employee_services"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:spinnerMode="dropdown"
                android:layout_gravity="center_horizontal"
                 />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_action_wh"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:backgroundTint="@color/lavander"
            android:clickable="true"
            android:contentDescription="@string/new_employee"
            app:srcCompat="@drawable/working_hours"
            tools:ignore="ImageContrastCheck" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_action_cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/lavander"
            android:clickable="true"
            android:contentDescription="@string/new_employee"
            app:srcCompat="@drawable/employee_calendar"
            tools:ignore="ImageContrastCheck" />

    </LinearLayout>

</LinearLayout>