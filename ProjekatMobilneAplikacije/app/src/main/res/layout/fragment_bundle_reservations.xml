<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.reservations.BundleReservationsFragment">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <android.widget.SearchView
            android:id="@+id/reservation_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_background"
            android:theme="@style/Theme.ProjekatMobilneAplikacije"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="70dp"
        >



        <Button
            android:id="@+id/btnFilters"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/filters"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/removeFiltersButton"
            android:background="@drawable/border_background"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:textSize="12dp"
            android:text="Remove filters"
            />


    </LinearLayout>


    <ExpandableListView
        android:id="@+id/bundle_reservations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp" />

</FrameLayout>