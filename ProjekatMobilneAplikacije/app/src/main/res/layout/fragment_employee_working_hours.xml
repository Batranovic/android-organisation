<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.employees.EmployeeWorkingHoursFragment">


    <TableRow
        android:layout_width="338dp"
        android:layout_height="89dp">

        <LinearLayout
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="277dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:src="@drawable/working_hours" />

            <TextView
                android:id="@+id/wh"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:text="@string/working_hours" />

        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="68dp">

        <LinearLayout
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/monday_wh"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:text="M" />
        </LinearLayout>

        <EditText
            android:id="@+id/monday_wh_input"
            android:layout_width="280dp"
            android:layout_height="56dp"
            android:ems="10"
            android:inputType="time" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <LinearLayout
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/thysday_wh"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:text="T" />
        </LinearLayout>

        <EditText
            android:id="@+id/thusday_wh_input"
            android:layout_width="284dp"
            android:layout_height="58dp"
            android:ems="10"
            android:inputType="time" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="67dp">

        <LinearLayout
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wed_wh"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:text="W" />
        </LinearLayout>

        <EditText
            android:id="@+id/wed_wh_input"
            android:layout_width="285dp"
            android:layout_height="55dp"
            android:ems="10"
            android:inputType="time" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="68dp">

        <LinearLayout
            android:layout_width="53dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/thuursday_wh"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:text="T" />
        </LinearLayout>

        <EditText
            android:id="@+id/thursday_wh_input"
            android:layout_width="281dp"
            android:layout_height="55dp"
            android:ems="10"
            android:inputType="time" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="76dp">

        <LinearLayout
            android:layout_width="53dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fri_wh"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:text="F" />
        </LinearLayout>

        <EditText
            android:id="@+id/friday_wh_input"
            android:layout_width="278dp"
            android:layout_height="59dp"
            android:ems="10"
            android:inputType="time" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="77dp" >

        <LinearLayout
            android:layout_width="53dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sat_wh"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:text="S" />
        </LinearLayout>

        <EditText
            android:id="@+id/saturday_wh_input"
            android:layout_width="285dp"
            android:layout_height="63dp"
            android:ems="10"
            android:inputType="time" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="80dp" >

        <LinearLayout
            android:layout_width="53dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sun_wh"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:text="S" />
        </LinearLayout>

        <EditText
            android:id="@+id/sunday_wh_input"
            android:layout_width="287dp"
            android:layout_height="59dp"
            android:ems="10"
            android:inputType="time" />
    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TableRow
                android:layout_width="169dp"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

                <Button
                    android:id="@+id/back_to_reg_button"
                    android:layout_width="135dp"
                    android:layout_height="67dp"
                    android:text="@string/back" />


            </TableRow>

            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="132dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/finish_reg_button"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:text="@string/finish" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
</ScrollView>