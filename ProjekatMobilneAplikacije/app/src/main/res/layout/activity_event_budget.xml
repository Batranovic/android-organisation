<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/budget_event"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView

        android:id="@+id/event_budget_title"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="@color/lavander"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/budget_plan"
        android:textSize="22dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <TextView
            android:id="@+id/event_category_suggestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:text="@string/suggestion_cat"
            android:textSize="20sp"
            android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/list_subcat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <include
                    layout="@layout/list_subcategorys_forevent"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/planned_budget_items"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="0dp"
                android:text="@string/planned_budget_items"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAddNewItem"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:text="Add new item"
                app:icon="@drawable/ic_new" />

        </LinearLayout>


        <Button
            android:id="@+id/button2"
            android:layout_width="246dp"
            android:layout_height="63dp"

            android:layout_gravity="center"
            android:text="@string/submit" />

    </LinearLayout>



</LinearLayout>
