<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal"
    android:background="@drawable/border_background"
    android:padding="10dp"
    android:layout_marginVertical="10dp"
    android:id="@+id/event_card_item"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/event_name_card"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:text="Privatni dogaÄ‘aji"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/event_description_card"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:text="Svadbe"
            android:textSize="14sp"
            android:textStyle="italic"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/activate_deactivate_event"
                android:layout_marginStart="250dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/border_background"
                android:src="@drawable/active_icon"
                android:tag="@drawable/active_icon" />
            <!--This tag is used to keep track of the current drawable resource ID associated with the button. -->

            <ImageButton
                android:id="@+id/edit_event"
                android:layout_marginStart="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/border_background"
                android:src="@drawable/edit_category" />

        </LinearLayout>



    </LinearLayout>
</LinearLayout>