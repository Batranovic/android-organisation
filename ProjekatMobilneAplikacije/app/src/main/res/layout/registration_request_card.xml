<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_marginVertical="10dp"
    android:id="@+id/registration_request_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/registration_request_card_company_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:text="Naziv kompanije"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/registration_request_card_owner_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Owner surname"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/registration_request_card_owner_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Owner email"
                    android:layout_marginTop="20dp"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/registration_request_card_company_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Company email"
                    android:layout_marginTop="20dp"
                    android:textSize="14sp"
                    android:textStyle="italic" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Ostali elementi mogu ici ovde -->
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
