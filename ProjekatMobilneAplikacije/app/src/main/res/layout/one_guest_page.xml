<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="310dp"
    android:orientation="vertical"
    android:background="@drawable/border_background"
    android:padding="16dp"
    android:id="@+id/one_guest">

    <!-- Ime i prezime gosta -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/guest_name_label"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_view_guest_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"/>

    <!-- Starost gosta -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/guest_age_label"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/text_view_guest_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="16sp"/>

    <!-- Da li je pozvan? -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/guest_invited_label"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/text_view_guest_invited"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="16sp"/>

    <!-- Da li je prihvatio poziv? -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/guest_accepted_label"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/text_view_guest_accepted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="16sp"/>

    <!-- Posebni zahtevi za gosta -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/guest_special_requests_label"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/text_view_guest_special_requests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="16sp"/>


</LinearLayout>
