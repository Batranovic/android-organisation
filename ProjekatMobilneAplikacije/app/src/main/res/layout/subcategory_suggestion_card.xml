<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_marginVertical="10dp"
    android:id="@+id/subcategory_suggestion_card_item"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/subcategory_suggestion_type"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:text="Product"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/subcategory_suggestion_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:text="Fotografije i Albumi"
            android:textSize="14sp"
            android:textStyle="italic"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <ImageButton
                android:id="@+id/delete_subcategory_suggestion"
                android:layout_marginStart="250dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Delete Subcategory"
                android:background="@drawable/border_background"
                android:src="@drawable/delete_category" />

            <ImageButton
                android:id="@+id/editsubcategory_suggestion"
                android:layout_marginStart="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Delete Subcategory"
                android:background="@drawable/border_background"
                android:src="@drawable/edit_category" />

        </LinearLayout>



    </LinearLayout>
</LinearLayout>