<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProjekatMobilneAplikacije" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#CCB3F8</item>
        <item name="colorOnPrimary">#443C55</item>
        <item name="colorPrimaryVariant">#443C55</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Theme.ProjekatMobilneAplikacije" parent="Base.Theme.ProjekatMobilneAplikacije" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#CCB3F8</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="MyTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">#E4DEDE</item>
    </style>

    <style name="MyToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">#484155</item>
        <item name="android:textColor">#E4DEDE</item>
    </style>

    <style name="MyCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#FFFFFF</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>


</resources>